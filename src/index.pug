doctype html
html(lang='en-us')
  head
    meta(charset='utf-8')
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Infinite news')
    link(rel='shortcut icon', type='image/png', href='../assets/favicon.ico')
    title Newsfinity
    style.
      body, html {
        overflow-x: hidden;
      }
      body {
        background: #34435a;
      }
      * {
        box-sizing: border-box;
      }
      .item {
        display: flex;
        padding: 20px;
        position: relative;
        flex-direction: column;
      }
      .item:nth-child(odd) {
        border-right: 6px solid #eee;
        border-left: 6px solid #ccc;
      }
      .item:nth-child(even) {
        border-left: 6px solid #eee;
        border-right: 6px solid #ccc;
      }
      .item:first-child {
        padding-top: 70px;
      }
      .item.loading p,
      .item.loading img.image {
        animation-duration: 2s;
        animation-fill-mode: forwards;
        animation-iteration-count: infinite;
        animation-name: placeHolderShimmer;
        animation-timing-function: linear;
        background: #f6f7f8;
        background: linear-gradient(to right, #eeeeee 8%, #dddddd 18%, #eeeeee 33%);
        background-size: 1000px 10px;
        position: relative;
      }
      .item.loading .time {
        animation-delay: 0.45s;
      }

      .item .overlay {
        backface-visibility: hidden;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: white;
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
      }
      .item.loading .overlay {
        opacity: 0.5;
      }
      .item .header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 5px;
      }
      .item .title {
        font-size: 14px;
        font-weight: bold;
        min-width: 40%;
      }
      .item .title a {
        color: #000;
        text-decoration: none;
      }
      .item .title a:hover {
        text-decoration: underline;
      }
      .item .author {
        color: #666;
        display: inline-block;
        font-size: 14px;
        min-width: 30%;
        margin-bottom: 5px;
      }
      .item .time {
        font-size: 14px;
        text-align: right;
        min-width: 20%;
        white-space: nowrap;
        color: #ccc;
        flex-shrink: 0;
        margin-left: 10px;
      }
      .item .text {
        font-size: 14px;
      }
      p {
        margin: 0;
        color: #14171a;
      }
      .container {
        width: 100%;
        max-width: 700px;
        background: white;
      }
      header {
        width: calc(100% - 12px);
        max-width: 688px;
        height: 50px;
        z-index: 9;
        background: rgba(255, 255, 255, 0.97);
        position: fixed;
        top: 0;
        font-size: 12px;
        padding-left: 16px;
        padding-right: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        backface-visibility: hidden;
      }
      header p {
        color: #666;
        text-align: right;
        line-height: 18px;
      }
      header a {
        color: #666;
      }
      body {
        font-family: 'Helvetica';
        display: flex;
        flex-direction: column;
        margin: 0;
        padding: 0;
        align-items: center;
      }
      img.image {
        margin-bottom: 10px;
        width: 100%;
        height: 300px;
        object-fit: cover;
        background: #eee;
      }
      #logo {
        cursor: pointer;
      }
      @media (min-width: 320px) and (max-width: 480px) {
        img.image {
          height: 180px;
        }
        .item,
        .item:nth-child(odd),
        .item:nth-child(even) {
          border-left: none;
          border-right: none;
          border-bottom: 2px solid #eee;
        }
        header {
          width: 100%;
          max-width: 700px;
        }
      }
      .item .content {
        flex-grow: 1;
      }

      .scroll {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        width: 60px;
        display: flex;
        flex-direction: column;
      }
      .scroll-item {
        position: relative;
        flex-grow: 1;
        width: 100%;
        margin-bottom: 1px;
        background: rgba(0, 0, 0, 0.4);
        animation: fadein 0.3s ease;
      }
      @keyframes fadein {
        from { opacity: 0; }
        to   { opacity: 1; }
      }
      .scroll .indicator {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        height: 30px;
        background: white;
        opacity: 0.10;
        z-index: 8;
      }

      @media (max-width: 820px) {
        .scroll {
          display: none;
        }
      }

      @keyframes placeHolderShimmer{
          0%{
              background-position: -1000px 0
          }
          100%{
              background-position: 1000px 0
          }
      }
  body
    header
      img#logo(height="25", src="data:image/svg+xml;base64,")
      p
        | I am&nbsp;
        a(href="https://github.com/jgranstrom/newsfinity") open source
        | &nbsp;and powered by&nbsp;
        a(href="https://newsapi.org") newsapi.org
    .container#container
    .scroll#scroll
      .indicator#indicator
    script(src='./index.ts')